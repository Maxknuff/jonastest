---
import '../styles.css';
import CheckoutOverlay from '../components/CheckoutOverlay.jsx';
import SupportOverlay from '../components/SupportOverlay.jsx'; // NEU
import ProductGrid from '../components/ProductGrid.jsx';       // NEU
import { Search, ShoppingBag, HelpCircle } from 'lucide-react';

// Datenquelle (Single Source of Truth)
const products = [
  { id: "VAPE12K", name: "RANDM TORNADO 12000", price: 59.90, image: "/products/VAPE12K.png" },
  { id: "VAPE15K", name: "RANDM TORNADO 15000", price: 29.90, image: "/products/VAPE15K.png" },
  { id: "prod_hardware_wallet", name: "Cold Storage Stick", price: 149.00, image: "/products/stick.png" },
];
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SECURE. | Premium Shop</title>
  </head>
  <body class="bg-[#F5F5F7] text-[#1D1D1F]">
    
    <header class="fixed top-0 w-full z-30 bg-white/80 backdrop-blur-xl border-b border-gray-200/50 transition-all">
      <div class="max-w-7xl mx-auto px-4 h-20 flex items-center gap-8">
        
        <a href="/" class="text-2xl font-black tracking-tighter flex items-center gap-1">
          SECURE<span class="text-[#0071E3] text-4xl">.</span>
        </a>

        <div class="hidden md:flex flex-1 max-w-2xl relative">
          <input 
            id="searchInput"
            type="text" 
            placeholder="Suche..." 
            class="w-full pl-12 pr-4 py-3 rounded-xl bg-gray-100 border-transparent focus:bg-white focus:ring-2 focus:ring-[#0071E3] focus:outline-none transition-all"
          />
          <Search className="absolute left-4 top-3.5 text-gray-400" size={20} />
        </div>

        <div class="flex items-center gap-4 ml-auto">
          
          {/* SUPPORT BUTTON (Funktional!) */}
          <button id="supportBtn" class="flex items-center gap-2 text-sm font-medium hover:text-[#0071E3] transition-colors bg-gray-100 hover:bg-blue-50 px-4 py-2 rounded-full">
            <HelpCircle size={18} />
            <span class="hidden sm:block">Support</span>
          </button>

          {/* WARENKORB BUTTON (Funktional!) */}
          <button id="cartBtn" class="relative cursor-pointer group p-2 hover:bg-gray-100 rounded-full transition">
             <ShoppingBag size={24} />
          </button>
        </div>
      </div>
    </header>

    <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="bg-black text-white rounded-3xl p-12 mb-16 relative overflow-hidden text-center md:text-left">
        <div class="relative z-10 max-w-2xl">
          <span class="text-[#0071E3] font-bold tracking-wide uppercase text-sm mb-2 block">Neu eingetroffen</span>
          <h1 class="text-5xl md:text-6xl font-bold tracking-tight mb-6">Next Level Flavor.</h1>
          <button class="bg-white text-black px-8 py-3 rounded-full font-bold hover:bg-gray-200 transition-colors">
            Jetzt entdecken
          </button>
        </div>
        <div class="absolute -right-20 -top-40 w-[600px] h-[600px] bg-[#0071E3] opacity-20 blur-[120px] rounded-full pointer-events-none"></div>
      </div>

      <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-bold tracking-tight">Shop</h2>
      </div>
      
      <ProductGrid client:load products={products} />

    </main>

    <CheckoutOverlay client:load />
    <SupportOverlay client:load />

    <script>
      import { isCartOpen, isSupportOpen, searchQuery } from '../store';

      // 1. Suche verbinden
      const searchInput = document.getElementById('searchInput');
      searchInput?.addEventListener('input', (e) => {
        searchQuery.set(e.target.value);
      });

      // 2. Support Button verbinden
      const supportBtn = document.getElementById('supportBtn');
      supportBtn?.addEventListener('click', () => {
        isSupportOpen.set(true);
      });

      // 3. Warenkorb Button verbinden
      const cartBtn = document.getElementById('cartBtn');
      cartBtn?.addEventListener('click', () => {
        isCartOpen.set(true);
      });
    </script>

  </body>
</html>
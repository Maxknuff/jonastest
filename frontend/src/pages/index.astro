---
import ProductCard from '../components/ProductCard.jsx';
import CheckoutOverlay from '../components/CheckoutOverlay.jsx';

// Dummy Produkte f√ºr den Test
const products = [
  { id: 1, name: "Ledger Nano X", price: 149.00, image: "https://shop.ledger.com/cdn/shop/products/Ledger-Nano-X-Black-1.png" },
  { id: 2, name: "Trezor Model T", price: 219.00, image: "https://shop.trezor.io/static/img/product/TrezorModelT/TrezorModelT_01.png" },
  { id: 3, name: "YubiKey 5C", price: 55.00, image: "https://www.yubico.com/wp-content/uploads/2018/09/yk5c-nfc-hero.png" },
];
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SECURE. Shop</title>
  </head>
  <body class="bg-white text-black font-sans antialiased">
    
    <header class="fixed top-0 w-full z-30 bg-white/80 backdrop-blur-md border-b border-neutral-100">
      <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
        <h1 class="text-2xl font-black tracking-tighter">SECURE.</h1>
        </div>
    </header>

    <main class="pt-32 pb-20 max-w-7xl mx-auto px-6">
      <h2 class="text-4xl md:text-6xl font-bold mb-12 tracking-tight">HARDWARE.</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map((product) => (
          <ProductCard 
            client:visible 
            id={product.id} 
            name={product.name} 
            price={product.price} 
            image={product.image} 
          />
        ))}
      </div>
    </main>

    <CheckoutOverlay client:load />

  </body>
</html>